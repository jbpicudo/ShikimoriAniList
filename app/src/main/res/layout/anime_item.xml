<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp">

    <ImageView
        android:id="@+id/ivAnimeCover"
        android:layout_width="154dp"
        android:layout_height="220dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivAnimeCover"
        app:layout_constraintTop_toTopOf="@id/ivAnimeCover"
        tools:text="АнимеЯ" />

    <TextView
        android:id="@+id/tvKind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/ivAnimeCover"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        tools:text="Тип"/>

    <TextView
        android:id="@+id/tvEpisodesAired"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@id/tvKind"
        app:layout_constraintTop_toBottomOf="@id/tvKind"
        tools:text="Эпизоды" />

    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@id/tvEpisodesAired"
        app:layout_constraintTop_toBottomOf="@id/tvEpisodesAired"
        tools:text="Статус" />

    <TextView
        android:id="@+id/tvScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="@id/ivAnimeCover"
        app:layout_constraintStart_toEndOf="@id/ivAnimeCover"
        tools:text="50" />

</androidx.constraintlayout.widget.ConstraintLayout>